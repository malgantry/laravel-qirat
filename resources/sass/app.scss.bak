@tailwind base;
@tailwind components;
@tailwind utilities;

@import 'bootstrap-icons/font/bootstrap-icons.css';

/* 
  PREMIUM DESIGN SYSTEM - QIRATAE
  Palette: Luxury Gold & Midnight Navy
  Typography: Cairo (Headings), Tajawal (Body)
  Build: v2.4-Platinum-Complete
*/

:root {
    /* Base Palette */
    --gold-100: #FBF6E8;
    --gold-200: #F3E8C4;
    --gold-300: #EAD59A;
    --gold-400: #DCC06E;
    --gold-500: #CFA43D;
    /* Primary Brand Gold */
    --gold-600: #B58826;
    --gold-700: #936B1B;

    --navy-50: #EFF2F6;
    --navy-100: #DDE4EE;
    --navy-800: #1B2430;
    /* Deep Midnight */
    --navy-900: #0F1319;
    /* Almost Black */

    /* Semantic Colors */
    --primary: var(--gold-500);
    --secondary: var(--navy-800);
    --bg-body: #FAFAF9;
    /* Warm off-white */
    --bg-card: #FFFFFF;
    --text-main: #0F172A;
    /* Midnight Navy (Slate 900) */
    --text-muted: #475569;
    /* Muted Navy-Gray (Slate 600) */
    --border-light: rgba(0, 0, 0, 0.06);

    /* Effects */
    --shadow-sm: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.08);
    --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    --shadow-glow: 0 0 20px rgba(207, 164, 61, 0.25);
    /* Gold Glow */

    --glass-border: 1px solid rgba(255, 255, 255, 0.6);
    --glass-bg: rgba(255, 255, 255, 0.7);
    --blur-strength: 16px;

    /* Status Colors */
    --success-bg: #ecfdf5;
    --success-text: #047857;
    --danger-bg: #fef2f2;
    --danger-text: #b91c1c;
    --info-bg: #eff6ff;
    --info-text: #1d4ed8;
}

html[data-theme="dark"] {
    --bg-body: #020617;
    /* Slate 950 - Absolute Deep Blue-Black */
    --bg-card: #0F172A;
    /* Slate 900 - Clearly defined card surface */
    --text-main: #F8FAFC;
    /* Slate 50 - Maximum clarity off-white */
    --text-muted: #94A3B8;
    /* Slate 400 - Clear secondary text */
    --border-light: rgba(255, 255, 255, 0.1);

    --glass-border: 1px solid rgba(255, 255, 255, 0.08);
    --glass-bg: rgba(15, 23, 42, 0.9);

    --gold-glow: 0 10px 40px rgba(251, 191, 36, 0.15);
    /* Vibrant Amber-Gold */
}

/* Global Typography */
body {
    font-family: 'Tajawal', sans-serif;
    background-color: var(--bg-body);
    color: var(--text-main);
    line-height: 1.6;
    transition: background-color 0.5s cubic-bezier(0.4, 0, 0.2, 1), color 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    overflow-x: hidden;
}

/* Global Transition for Theme Elements */
*,
::before,
::after {
    transition-property: background-color, border-color, color, box-shadow, opacity;
    transition-duration: 0.5s;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
}

/* Disable transition on specific heavy elements if needed */
.no-transition {
    transition: none !important;
}

h1,
h2,
h3,
h4,
h5,
h6,
.font-heading {
    font-family: 'Cairo', sans-serif;
    font-weight: 700;
    letter-spacing: -0.01em;
}

/* Page Transition Animation */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(15px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* --- GOAL CARDS & RINGS --- */

/* Premium Goal Card (Glass Effect) */
.goal-card-premium {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(207, 164, 61, 0.15);
    border-radius: 24px;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-shadow: 0 4px 20px -2px rgba(0, 0, 0, 0.05);
}

.goal-card-premium:hover {
    transform: translateY(-6px) scale(1.01);
    box-shadow: 0 20px 40px -12px rgba(207, 164, 61, 0.2), var(--shadow-glow);
    border-color: rgba(207, 164, 61, 0.4);
}

/* Premium Ring */
.ring-premium {
    position: relative;
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: conic-gradient(var(--gold-500) var(--p, 0%), transparent 0);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.1);
}

.ring-premium::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    border: 8px solid rgba(148, 163, 184, 0.1);
    /* Track */
    z-index: 0;
}

.ring-premium::after {
    content: '';
    position: absolute;
    inset: 10px;
    background: var(--bg-card);
    /* Inner cut */
    border-radius: 50%;
    z-index: 1;
    box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.05);
}

/* Adaptive Ring Value Color */
.ring-premium-val {
    position: relative;
    z-index: 2;
    font-family: 'Cairo', sans-serif;
    font-weight: 800;
    font-size: 1.5rem;
    color: var(--text-main);
    /* Will adapt via Tailwind */
}

/* --- CONFETTI ANIMATION --- */
.confetti {
    position: absolute;
    width: 10px;
    height: 10px;
    top: -10px;
    animation: confetti-fall 3s linear infinite;
    opacity: 0;
}

@keyframes confetti-fall {
    0% {
        top: -10px;
        opacity: 1;
        transform: translateX(0) rotateZ(0deg);
    }

    100% {
        top: 100%;
        opacity: 0;
        transform: translateX(25px) rotateZ(520deg);
    }
}



.animate-enter {
    animation: fadeInUp 0.5s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
}

/* Scrollbar Customization */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: transparent;
}

::-webkit-scrollbar-thumb {
    background: var(--gold-400);
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--gold-500);
}

/* --- COMPONENTS --- */

/* 1. Glass Cards (The foundation of the UI) */
.card-premium {
    background: var(--bg-card);
    border: 1px solid rgba(207, 164, 61, 0.15);
    border-radius: 24px;
    box-shadow: 0 4px 20px -2px rgba(0, 0, 0, 0.05);
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
    overflow: hidden;
}

.card-premium:hover {
    transform: translateY(-6px) scale(1.01);
    box-shadow: 0 20px 40px -12px rgba(207, 164, 61, 0.2), var(--shadow-glow);
    border-color: rgba(207, 164, 61, 0.4);
}

html[data-theme="dark"] .card-premium {
    background: var(--bg-card);
    border-color: var(--border-light);
    box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.5);
}

html[data-theme="dark"] .card-premium:hover {
    border-color: rgba(251, 191, 36, 0.3);
    box-shadow: 0 15px 50px -12px rgba(0, 0, 0, 0.7), var(--gold-glow);
}

.glass-panel {
    background: var(--glass-bg);
    backdrop-filter: blur(var(--blur-strength));
    -webkit-backdrop-filter: blur(var(--blur-strength));
    border: var(--glass-border);
}

/* 2. Buttons */
.btn-gold {
    background: linear-gradient(135deg, var(--gold-500) 0%, var(--gold-700) 100%);
    color: white;
    font-family: 'Cairo', sans-serif;
    font-weight: 700;
    padding: 0.6rem 1.4rem;
    border-radius: 12px;
    border: none;
    box-shadow: 0 4px 12px rgba(181, 136, 38, 0.3);
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

.btn-gold:hover {
    transform: scale(1.02);
    box-shadow: 0 6px 16px rgba(181, 136, 38, 0.5);
    filter: brightness(1.1);
    color: white;
}

/* Theme Toggle Special Animation */
#themeToggle i {
    transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

html[data-theme="dark"] #themeToggle i {
    transform: rotate(360deg);
}

.btn-soft {
    background: var(--navy-50);
    color: var(--secondary);
    border-radius: 12px;
    padding: 0.5rem 1rem;
    font-weight: 600;
    transition: all 0.2s;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

html[data-theme="dark"] .btn-soft {
    background: rgba(255, 255, 255, 0.06);
    color: white;
}

.btn-soft:hover {
    background: rgba(0, 0, 0, 0.05);
    color: var(--text-main);
}

/* 3. Navigation Header */
.top-shell {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.03);
    position: sticky;
    top: 0;
    z-index: 50;
    transition: background 0.3s;
}

html[data-theme="dark"] .top-shell {
    background: rgba(18, 21, 28, 0.85);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.logo-img {
    height: 40px;
    width: auto;
    object-fit: contain;
}

/* Light/Dark Visibility Utilities */
.theme-icon-wrapper {
    display: grid;
    place-items: center;
    position: relative;
    width: fit-content;
}

.dark-only,
.light-only {
    grid-area: 1 / 1;
    transition: opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1), transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) !important;
}

.dark-only {
    opacity: 0 !important;
    visibility: hidden;
}

html[data-theme="dark"] .dark-only {
    opacity: 1 !important;
    visibility: visible;
}

html[data-theme="dark"] .light-only {
    opacity: 0 !important;
    visibility: hidden;
}

.light-only {
    opacity: 1 !important;
    visibility: visible;
}

.text-on-hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    line-height: 1.2;
}

.bg-surface {
    background-color: var(--bg-body);
}

/* 3.1 Navigation Tabs */
.primary-tabs {
    display: flex;
    gap: 0.5rem;
    overflow-x: auto;
    padding-bottom: 2px;
    align-items: center;
}

.tab-link {
    color: var(--text-muted);
    font-weight: 600;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s;
    white-space: nowrap;
}

.tab-link:hover {
    background: rgba(0, 0, 0, 0.03);
    color: var(--gold-600);
}

html[data-theme="dark"] .tab-link:hover {
    background: rgba(255, 255, 255, 0.05);
}

.tab-link.active {
    background: var(--gold-100);
    color: var(--gold-700);
}

html[data-theme="dark"] .tab-link.active {
    background: rgba(207, 164, 61, 0.15);
    color: var(--gold-400);
}

/* 3.2 Icon Buttons & Avatars */
.icon-btn {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: transparent;
    color: var(--text-muted);
    transition: all 0.2s;
}

.icon-btn:hover {
    background: rgba(0, 0, 0, 0.05);
    color: var(--gold-600);
}

html[data-theme="dark"] .icon-btn:hover {
    background: rgba(255, 255, 255, 0.05);
    color: white;
}

.avatar-chip {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--gold-500);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    font-weight: 700;
}

/* 3.3 Dropdowns */
.profile-menu {
    position: absolute;
    top: 100%;
    left: 0;
    margin-top: 0.5rem;
    width: 200px;
    background: var(--glass-bg);
    backdrop-filter: blur(var(--blur-strength));
    border: var(--glass-border);
    border-radius: 16px;
    box-shadow: var(--shadow-lg);
    z-index: 100;
    padding: 0.5rem;
    overflow: hidden;
    transform-origin: top left;
    animation: fadeInUp 0.2s ease-out;
}

.menu-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    color: var(--text-main);
    text-decoration: none;
    border-radius: 10px;
    transition: all 0.2s;
    font-size: 0.95rem;
}

.menu-item:hover {
    background: rgba(207, 164, 61, 0.1);
    color: var(--gold-600);
}

/* 3.4 Hero Section */
.hero {
    margin-top: 2rem;
}

/* 4. Inputs */
.input-premium {
    background: var(--bg-body);
    border: 1px solid transparent;
    /* No border initially */
    box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.03);
    border-radius: 12px;
    padding: 12px 16px;
    margin-bottom: 10px;
    width: 100%;
    transition: all 0.2s;
    color: var(--text-main);
}

.input-premium:focus {
    background: var(--bg-card);
    border-color: var(--gold-400);
    box-shadow: 0 0 0 3px rgba(207, 164, 61, 0.2);
    outline: none;
}

/* 5. AI Suggestions */
.ai-feedback-gold {
    border-right: 4px solid var(--gold-500);
    background: linear-gradient(90deg, rgba(207, 164, 61, 0.05) 0%, transparent 100%);
    border-radius: 12px;
    padding: 16px;
    margin-bottom: 12px;
    animation: fadeInUp 0.4s ease-out;
}

/* 7. Alerts & Toasts */
.alert {
    padding: 1rem;
    border-radius: 12px;
    margin-bottom: 1rem;
    font-weight: 500;
}

.alert-success,
.soft-alert {
    background-color: var(--success-bg);
    color: var(--success-text);
    border: 1px solid rgba(4, 120, 87, 0.1);
}

.alert-danger {
    background-color: var(--danger-bg);
    color: var(--danger-text);
    border: 1px solid rgba(185, 28, 28, 0.1);
}

/* Premium Field Error */
.invalid-feedback-premium {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: #fef2f2;
    border-right: 3px solid #ef4444;
    border-radius: 8px;
    color: #b91c1c;
    font-size: 0.75rem;
    font-weight: 700;
    animation: fadeInUp 0.3s ease-out;
}

html[data-theme="dark"] .invalid-feedback-premium {
    background: rgba(239, 68, 68, 0.1);
    color: #fca5a5;
}

.input-invalid {
    border-color: #ef4444 !important;
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1) !important;
}

.toast-area {
    position: fixed;
    bottom: 20px;
    left: 20px;
    z-index: 9999;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.toast-message {
    background: var(--glass-bg);
    backdrop-filter: blur(12px);
    border: var(--glass-border);
    padding: 1rem 1.5rem;
    border-radius: 12px;
    box-shadow: var(--shadow-lg);
    animation: fadeInUp 0.3s ease-out;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    min-width: 300px;
}

/* 8. Utility Overrides (Bootstrap Shim) */
.container {
    @apply mx-auto max-w-7xl px-4 sm:px-6 lg:px-8;
}

.row {
    @apply flex flex-wrap -mx-4;
}

.col-md-6 {
    @apply w-full md:w-1/2 px-4 mb-6;
}

.col-md-4 {
    @apply w-full md:w-1/3 px-4 mb-6;
}

.col-12 {
    @apply w-full px-4 mb-4;
}

.d-none {
    display: none;
}

.d-flex {
    display: flex;
}

.align-items-center {
    align-items: center;
}

.justify-content-between {
    justify-content: space-between;
}

.gap-2 {
    gap: 0.5rem;
}

.gap-3 {
    gap: 0.75rem;
}

.mb-3 {
    margin-bottom: 0.75rem;
}

.mb-4 {
    margin-bottom: 1rem;
}

.text-muted {
    color: var(--text-muted);
}

.text-decoration-none {
    text-decoration: none;
}

/* Dashboard Grid Enhancements */
.stat-value-lg {
    font-size: 2.2rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--text-main) 0%, var(--gold-600) 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

/* Custom Bottom Nav (Mobile) */
.mobile-nav {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border-top: var(--glass-border);
    border-radius: 20px 20px 0 0;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.05);
}

/* 9. Data Tables */
.table-responsive {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
}

.table-modern {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0 8px;
    margin-top: -8px;
}

.table-modern thead th {
    background: transparent;
    border: none;
    color: var(--text-muted);
    font-size: 0.85rem;
    font-weight: 600;
    padding: 0 1rem;
    text-align: right;
}

.table-modern tbody tr {
    background: var(--bg-card);
    box-shadow: var(--shadow-sm);
    transition: transform 0.2s;
}

.table-modern tbody tr:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.table-modern td {
    padding: 1rem;
    border: solid transparent;
    border-width: 1px 0;
}

.table-modern td:first-child {
    border-left: 1px solid transparent;
    border-top-right-radius: 12px;
    border-bottom-right-radius: 12px;
}

.table-modern td:last-child {
    border-right: 1px solid transparent;
    border-top-left-radius: 12px;
    border-bottom-left-radius: 12px;
}

/* 10. Chips & Badges */
.chip {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.35rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.8rem;
    font-weight: 600;
    background: var(--navy-50);
    color: var(--secondary);
}

html[data-theme="dark"] .chip {
    background: rgba(255, 255, 255, 0.1);
    color: white;
}

/* 11. Luxury Micro-interactions */
.cursor-glow {
    position: fixed;
    top: 0;
    left: 0;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(212, 175, 55, 0.08) 0%, rgba(212, 175, 55, 0) 70%);
    pointer-events: none;
    z-index: 0;
    transform: translate(-50%, -50%);
    transition: opacity 0.5s ease;
    opacity: 0;
}

html[data-theme="dark"] .cursor-glow {
    background: radial-gradient(circle, rgba(251, 191, 36, 0.05) 0%, rgba(251, 191, 36, 0) 70%);
}

body:hover .cursor-glow {
    opacity: 1;
}

.magnet-target {
    transition: transform 0.2s cubic-bezier(0.33, 1, 0.68, 1);
    will-change: transform;
}

.shadow-premium {
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

html[data-theme="dark"] .shadow-premium {
    box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.5);
}
